FROM httpd:2.4

# Copie de votre fichier httpd.conf personnalis√©
COPY httpd.conf /usr/local/apache2/conf/httpd.conf

# Activation du module MPM event
RUN sed -i \
    's/#LoadModule mpm_event_module modules\/mod_mpm_event.so/LoadModule mpm_event_module modules\/mod_mpm_event.so/' \
    /usr/local/apache2/conf/httpd.conf

CMD ["httpd", "-D", "FOREGROUND"]

